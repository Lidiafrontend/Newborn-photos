            div.main__container.container
                div.photomenu
                    ul.photomenu__list
                        li.photomenu__item.photomenu__item_aboutme                         
                            a.photomenu__link(href="index.html#aboutme")
                                span.photomenu__title Обо мне
                        li.photomenu__item.photomenu__item_myworks 
                            a.photomenu__link(href="index.html#myworks")
                                span.photomenu__title Мои работы
                        li.photomenu__item.photomenu__item_myblog 
                            a.photomenu__link(href="https://tema.livejournal.com/")    
                                span.photomenu__title Мой блог
                                
                section.review#review
                    h2.review__title Отзывы
                    div.reviews
                        li.reviews__item
                            div.reviews__pic
                                img.reviews__img(src="../img/reviews/1.jpg")
