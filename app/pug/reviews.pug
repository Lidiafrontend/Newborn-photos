        footer.footer
            div.footer__container.container
                div.contactinfo Newborn photographer Lyudmila 
                    span.contactinfo__phone +7 916 4891488
                div.socials
                    ul.socials__list
                        li.social__item
                            a.social__link.social__link_vk(href="https://vk.com/")
