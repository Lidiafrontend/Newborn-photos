                                    span.logo__titlename LYUDMILA 
                div.header__part
                    div.shortdescription Фотосессии для новорожденных
                div.header__part
                    div.contacts
                        ul.contacts__list
                            li.contacts__item 
                                span.contacts__icon.contacts__icon_mobile.icon.icon-phone 
                                span.contacts__text +7 916 4891488
                                
                            li.contacts__item  
                                span.contacts__icon.contacts__icon_skype.icon.icon-skype 
                                span.contacts__text SkypeSkype
